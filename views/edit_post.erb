
<div class = "main_content">
	
	<% if @post_edited %>
		<h2> Thank You! Your post has been edited</h2>
	<% else %>

		<h3> Edit this post </h3>

		<form action="/<%=@topic%>/post/<%=@id%>/edit" method="post">
			<input type="hidden" name = "_method" value="PUT"/>
		
			<div class="form-group">
				<label for="title">Title </label>
				<input type="text" class="form-control" name = "title" value = <%= @title %>/>
			</div>

			</br>

			<div class="form-group">
				<label for="date">Date </label>
				<input type="text" class="form-control" name="today_date" value = <%= @date %> />
			</div>

			</br>

			<div class="form-group">
				<label for="message"> Message </label>
				<textarea name="message" class="form-control"> <%= @content %> </textarea>
			</div>

			</br>

			<div class="form-group">
				<input type="submit" class="btn btn-info" value="Edit Post" />
			</div>

		</form>
		<% end %>
</div>